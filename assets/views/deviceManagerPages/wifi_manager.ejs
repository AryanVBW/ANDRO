<div class="ui inverted segment">
    <div class="ui inverted secondary menu">
        <div class="right menu">
            <button onclick="updateButton(this, '0xWI')" class="ui inverted blue button">
                <i class="icon sync"></i>Update
            </button>
        </div>
    </div>
    <h3 class="ui inverted dividing header">Current</h3>

    <table class="ui inverted celled table">
        <thead>
            <tr>
                <th>SSID</th>
                <th>BSSID</th>
            </tr>
        </thead>
        <tbody>
            <% if (pageData && pageData.now) { %>
                <% pageData.now.forEach((wifi) => { %>
                <tr>
                    <td><%= wifi.SSID %></td>
                    <td><%= wifi.BSSID %></td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="2" class="center aligned">No current WiFi connections</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h3 class="ui inverted dividing header">History</h3>

    <table class="ui inverted celled table">
        <thead>
            <tr>
                <th>SSID</th>
                <th>BSSID</th>
                <th>Discovered On</th>
            </tr>
        </thead>
        <tbody>
            <% if (pageData && pageData.history) { %>
                <% pageData.history.forEach((wifi) => { %>
                <tr>
                    <td><%= wifi.SSID %></td>
                    <td><%= wifi.BSSID %></td>
                    <td><%= wifi.time %></td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="center aligned">No WiFi history available</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>