<div class="ui container main-header">
    <div class="ui secondary menu">
        <div class="header item"><img src="/logo.png" style="width: 120px" alt="ANDRO_RAT"></div>
        <a href="/" class="item">
            <i class="icon mobile alternate"></i><span class="menu-text">Devices</span>
        </a>

        <a href="/builder" class="item">
            <i class="icon wrench"></i><span class="menu-text">APP Builder</span>
        </a>

        <a href="/logs" class="item">
            <i class="icon terminal"></i><span class="menu-text">Event Log's</span>
        </a>
        <div class="right menu">
            <% if (typeof user !== 'undefined' && user.role === 'admin') { %>
                <a href="/settings/users" class="ui item">
                    <i class="users icon"></i><span class="menu-text">Manage Users</span>
                </a>
                <a href="/settings" class="ui item">
                    <i class="icon settings"></i><span class="menu-text">Settings</span>
                </a>
            <% } %>
            <div class="ui dropdown item">
                <i class="user circle icon"></i>
                <span class="menu-text">
                    <%= user.username %> 
                    <small class="role-badge"><%= user.role %></small>
                </span>
                <div class="menu">
                    <a href="/logout" class="item">
                        <i class="sign-out icon"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="ui divider header-divider"></div>
</div>

<style>
    .main-header {
        padding: 15px 0;
    }
    
    .ui.secondary.menu {
        border-radius: 8px;
        padding: 10px;
        backdrop-filter: blur(5px);
    }
    
    [data-theme="dark"] .ui.secondary.menu {
        background-color: rgba(18, 18, 18, 0.8);
        border: 1px solid var(--highlight-color);
        box-shadow: 0 0 10px rgba(0, 255, 157, 0.3);
    }
    
    .ui.secondary.menu .item {
        border-radius: 5px;
        margin: 0 5px;
        padding: 8px 15px;
        transition: all 0.3s ease;
    }
    
    [data-theme="dark"] .ui.secondary.menu .item {
        color: var(--text-color);
    }
    
    [data-theme="dark"] .ui.secondary.menu .item:hover {
        background-color: rgba(0, 255, 157, 0.1);
        color: var(--highlight-color);
    }
    
    [data-theme="dark"] .ui.secondary.menu .active.item {
        background-color: rgba(0, 255, 157, 0.2);
        color: var(--highlight-color);
        box-shadow: 0 0 5px rgba(0, 255, 157, 0.3);
    }
    
    .menu-text {
        margin-left: 5px;
    }
    
    .header-divider {
        margin-top: 5px !important;
        margin-bottom: 15px !important;
    }
    
    [data-theme="dark"] .header-divider {
        background-color: var(--highlight-color) !important;
        box-shadow: 0 0 5px rgba(0, 255, 157, 0.5);
        height: 1px;
    }

    .role-badge {
        background: rgba(0, 255, 157, 0.1);
        color: var(--highlight-color);
        padding: 2px 6px;
        border-radius: 3px;
        margin-left: 5px;
        font-size: 0.8em;
        text-transform: uppercase;
    }
</style>

<script>
    $('.ui.dropdown').dropdown();
</script>
