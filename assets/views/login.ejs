<!DOCTYPE html>
<html>

<% include partials/head.ejs %>

<body>
    <script>
        $(document).ready(function () {
            $('.ui.form').form({
                fields: {
                    email: {
                        identifier: 'username',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Please enter your username'
                            }
                        ]
                    },
                    password: {
                        identifier: 'password',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Please enter your password'
                            }
                        ]
                    }
                }
            });
        });
    </script>

    <!-- Background with parallax effect -->
    <div class="background-container">
        <div class="background-overlay"></div>
    </div>

    <div class="login-container">
        <form class="ui large form" method="POST">
            <div class="ui stacked segment">
                <h1 class="ui center aligned header glitch">ANDRO_RAT</h1>
                <div class="login-logo">
                    <img src="/logo.png" style="height: 150px; display: block; margin: 0 auto;">
                </div>
                
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="Username">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Password">
                    </div>
                </div>
                <button class="ui fluid large button submit-btn" type="submit">LOGIN</button>
                <div class="ui error message"></div>
            </div>
        </form>
        <div class="footer-text">
            <p>Made with <span class="heart">‚ù§Ô∏è‚Äçüî•</span> By <a href="https://github.com/AryanVBW" target="_blank" class="author-link">üî•Viveküî•</a></p>
        </div>
    </div>

    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            font-family: 'Courier New', Courier, monospace;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("https://github.com/AryanVBW/kali-Linux-Android/releases/download/1.p/anonymous-g4c02e4053_1920.jpg");
            background-size: cover;
            background-position: center;
            z-index: -2;
        }

        .background-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }

        .login-container {
            width: 100%;
            max-width: 450px;
            padding: 20px;
            border-radius: 10px;
            backdrop-filter: blur(5px);
            box-shadow: 0 0 20px rgba(0, 255, 157, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 10;
            animation: glow 3s infinite alternate;
        }

        [data-theme="dark"] .login-container {
            background-color: rgba(30, 30, 30, 0.8);
            border: 1px solid var(--highlight-color);
        }

        .ui.stacked.segment {
            border: none;
            background-color: rgba(255, 255, 255, 0.05);
            box-shadow: none;
        }

        [data-theme="dark"] .ui.stacked.segment {
            background-color: rgba(0, 0, 0, 0.2);
        }

        .ui.header {
            color: var(--header-color);
            font-family: 'Courier New', Courier, monospace;
            margin: 0 0 20px 0;
        }

        .ui.form .field {
            margin-bottom: 20px;
        }

        .ui.form input {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--text-color);
            border-radius: 5px;
        }

        [data-theme="dark"] .ui.form input {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid var(--highlight-color);
            color: var(--text-color);
        }

        .submit-btn {
            background-color: transparent !important;
            color: #fff !important;
            border: 1px solid #00ff9d !important;
            font-family: 'Courier New', Courier, monospace !important;
            transition: all 0.3s ease !important;
        }

        .submit-btn:hover {
            background-color: #00ff9d !important;
            color: #000 !important;
            box-shadow: 0 0 10px #00ff9d !important;
        }

        .footer-text {
            margin-top: 20px;
            text-align: center;
            color: var(--text-color);
            font-size: 14px;
        }

        .footer-text .heart {
            color: #ff0066;
            animation: heartbeat 1.5s infinite;
        }

        .author-link {
            color: #00ff9d;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .author-link:hover {
            color: #00cc7a;
            text-shadow: 0 0 5px #00ff9d;
        }

        @keyframes glow {
            0% {
                box-shadow: 0 0 10px rgba(0, 255, 157, 0.3);
            }
            100% {
                box-shadow: 0 0 20px rgba(0, 255, 157, 0.6);
            }
        }

        @keyframes heartbeat {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 5px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.1);
        }

        ::-webkit-scrollbar-thumb {
            background: #00ff9d;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #00cc7a;
        }
    </style>
</body>

</html>
